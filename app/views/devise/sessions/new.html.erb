<div class="devise-container">
  <div class="devise-login-heading">
    <h2 class="text-center">Log in</h2>
    <hr>
  </div>

  <% resource_class.omniauth_providers.each do |provider| %>
    <div class="facebook-button text-center">
      <%= link_to omniauth_authorize_path(resource_name, provider) do %>
        <i class="fa fa-facebook"></i><%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %>
      <% end %>
    </div>
    <br />
  <% end %>



<div class="recipe-category-title-start"><p class="option">  or  </p></div>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="devise-form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", class: "btn btn-log-in" %>
      <br>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

