<div class="navbar navbar-fixed">
  <div class="how-it-works text-center">
    <p>How it works</p>
    <hr>
  </div>
  <div class="horizontal-space"></div>
  <%= image_tag "logo3.png", class: "logo" %>
  <!-- Different navigation if login or not -->
  <% if user_signed_in? %>
    <!-- Profile picture and dropdown -->
    <div class="navbar-item">
      <div class="dropdown">
       <p class="dropdown-toggle text-right" id="navbar-wagon-menu" data-toggle="dropdown" > <%=current_user.first_name %> <i class="fa fa-caret-down" aria-hidden="true"></i></p>

        <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-check-square-o"></i>  <%= t(".profile", default: "My orders") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-cutlery"></i>  <%= t(".profile", default: "My recipes") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <!-- Login text link -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-item navbar-link" %>
  <% end %>
  <!-- Cart -->
  <%= link_to "#", class: "cart-link text-right" do %>
    <i class="fa fa-shopping-cart cart"></i>  <%= t(".profile", default: "") %>
  <% end %>
</div>

