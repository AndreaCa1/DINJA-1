
<div class="container">
  <div class="row">
      <div class= "recipe-info-show-1">
        <div class="col-xs-6 recipe-name">
          <h3> <%= @recipe.name.upcase %> </h3>
        </div>
        <div class="col-xs-6 recipe-info-details">
           <div class="recipe-add">
            <%= link_to "Add to cart", root_path, method: 'post', class: "btn btn-primary btn-lg recipe-add-button"%>
          </div>
        </div>
      </div>
    </div>



  <div class="row">
    <div class="recipe-info-show-2">
      <div class="col-xs-6">
        <%= image_tag @recipe.photo, class: "recipe-image" %>
        <!-- <div style="background-image: url('<%= asset_path @recipe.photo %>');" class="recipe-image"></div> -->
      </div>
      <div class="col-xs-6">
        <div class="tabulation">
          <div class="tab-list">
            <div class= "tabs details active" data-target= "details">DETAILS</div>
            <div class= "tabs ingredients" data-target= "ingredients">INGREDIENTS</div>
            <div class= "tabs prep" data-target= "prep">PREPARATION</div>
          </div>
          <div class = "tab-content row setting" id="details" >
            <div class="col-xs-6 tab-content-details numbers">
              <h4><strong>In Numbers</strong></h4>
              <p>Price: â‚¬<%= @recipe.price %>.00</p>
              <p>Prep time: <%= @recipe.prep_time %> mins</p>
              <p>Cook time: <%= @recipe.cooking_time %> mins</p>
              <p>Meal type: <%= @recipe.category %></p>
              <p>Calories: <%= @recipe.calories %></p>
            </div>
            <div class="col-xs-6 tab-content-details restrictions">
              <h4><strong>Nutrition Specs</strong></h4>
              <% if @recipe.vegetarian == true %>
                <p>Vegetarian <i class="fa fa-check" aria-hidden="true"></i></p>
              <% end %>
              <% if @recipe.vegan == true %>
                <p>Vegan <i class="fa fa-check" aria-hidden="true"></i></p>
              <% end %>
              <% if @recipe.gluten_free == true %>
                <p>Gluten free <i class="fa fa-check" aria-hidden="true"></i></p>
              <% end %>
              <% if @recipe.egg_free == true %>
                <p>Egg free <i class="fa fa-check" aria-hidden="true"></i></p>
              <% end %>
              <% if @recipe.dairy_free == true %>
                <p>Dairy free <i class="fa fa-check" aria-hidden="true"></i></p>
              <% end %>
            </div>
          </div>
          <div class = "tab-content hidden setting" id= "ingredients">
            <h4><strong>In Your Dinja Box</strong></h4>
            <% @recipe.doses.each do |dose| %>
            <p><%= dose.measure %> <%= dose.ingredient.name %></p>
            <% end %>
          </div>
          <div class = "tab-content hidden setting" id="prep" >
            <h4><strong>Let's get cooking</strong></h4>
            <p><%= @recipe.instructions %></p>
          </div>
        </div>
      </div>
      </div>
  </div>

</div>





