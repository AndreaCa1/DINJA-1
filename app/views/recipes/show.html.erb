
<div class="container">

<div class= "info-show-1">

  <div class="recipe-name">
    <h2> <%= @recipe.name.upcase %> </h2>
  </div>

  <div class="recipe-price">
   <h5> <%= @recipe.price %>â‚¬ </h5>
  </div>

  <div class="prep-time">
    <h5> <%= @recipe.calories%> calories</h5>
  </div>

  <div class="cooking-time">
    <h5> <%= @recipe.cooking_time %>min</h5>
  </div>

   <div class="add">
    <%= link_to "Add to cart", root_path, method: 'post', class: "btn btn-primary btn-lg"%>
  </div>

</div>

<div class="info-show-2">

  <div style="background-image: url('<%= asset_path @recipe.photo %>');" class="recipe-image">
  </div>

  <div class="tabulation">
    <div class="tab-list">
      <div class= "tabs prep active" data-target= "prep"> PREP
      </div>

      <div class= "tabs ingredients" data-target= "ingredients">INGREDIENTS</div>
    </div>

 <div class = "tab-content setting" id="prep" >
          <%= @recipe.prep_time %> minutes
          <br>
          <br>
          <%= @recipe.instructions %>
    </div>

    <div class = "tab-content hidden setting" id= "ingredients">
      <% @recipe.doses.each do |dose| %>
      <ul> <%= dose.measure %> <%= dose.ingredient.name %> </ul>
      <% end %>
      </div>

  </div>
</div>

</div>




