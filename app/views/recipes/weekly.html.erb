
<div class="banner" style="background-image: linear-gradient(-210deg, rgba(0,10,58,0.6) 0%, rgba(0,10,10,0.2) 30%), url('<%= asset_path 'shutterstock.png' %>');">
  <div class="banner-content">
  <p>Sick of hearing 'What's for dinner' ? </p>
    <h1>Get diversified meals - Delivered !</h1>
    <br> <br>
    <a href="#starters" class="btn btn-primary btn-lg">Discover this week's meals</a>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="container">
    <h2 class="text-center"></h2>
    <div class="row">
      <div class = "title-start" id="starters"><h4>Starters</h4> </div>
        <% @starters.each do |starter| %>
          <div class="col-xs-12 col-sm-4">
            <div class="recipe-container">
              <div class="recipe-picture" style="background: url('<%= image_path starter.photo %>');">
              </div>
              <div class="recipe-footer">
                <div class="recipe-title"><%= starter.name %></div>
                <div class="recipe-actions">
                  <div class="recipe-price"><%= starter.price %>€</div>
                  <%= link_to "+ Add", "#", class: "recipe-select" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>



