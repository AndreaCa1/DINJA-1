<div class="order-process-container">
  <div class="cart-confirm-container">
    <div class="cart-heading text-center">
      <h2>MY ORDERS</h2>
      <hr>
    </div>
    <div class="order-item-cart my-past-orders">
      <div>
        <p class="font flex-quarter"><strong>Date of delivery</strong></p>
      </div>
      <div>
        <p class="font flex-quarter" style="padding-left: 38px;"><strong>Amount</strong></p>
      </div>
      <div>
        <p class="font flex-fifth" style="padding-right: 60px;"><strong>Status</strong></p>
      </div>
    </div>
    <% if @orders_paid.count > 0 %>
    <% @orders_paid.each do |orders_paid| %>
      <div class="order-item-cart my-past-orders">
        <div>
          <p class="font flex-quarter"><%= orders_paid.delivery_date.strftime("%B %d, %Y")%></p>
        </div>
        <div>
          <p class="font flex-quarter"><%= orders_paid.price%>.00â‚¬</p>
        </div>
        <div>
          
          <% if orders_paid.delivery_date > Date.today %>
            <p class="font flex-fifth">On its way!   <i class="fa fa-truck" aria-hidden="true"></i></p>
          <% else %>
            <p class="font flex-fifth">Delivered!   <i class="fa fa-check" aria-hidden="true"></i></p>
          <% end %>
        </div>
      </div>
    <% end %>
    <% else %>
     <div class="no-items-in-cart">
        <h4 class="text-center">You have currently no orders. Time to get clicking and start cooking!</h4>
        <hr>
        <%= link_to root_path({target: 'starters'}) do  %>
          <button class="btn btn-check-meals btn-lg">Check out this week's meals</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



