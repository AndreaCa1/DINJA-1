<div class="container">
  <h1>Your Shopping Cart</h1>

  <% @order.order_items.each do |order_item| %>
    <div class="row order-item">

      <div class="col-xs-12 col-md-3">
        <div class="order-picture">
          <%= image_tag order_item.recipe.photo, class: "test_picture" %>
        </div>
      </div>

      <div class="col-xs-12 col-md-3 order-item-col-centered">
        <h3><%= order_item.recipe.name %></h3>
      </div>

      <div class="col-md-6 orders-controls-container order-item-col-centered">
        <!-- <div class="orders-edit-quantity"> -->
          <div>Price: €<%= order_item.recipe.price %>.00 </div>
          <div class="orders-controls-quantity">
            <div>Quantity: <%= order_item.quantity %></div>
            <div class="orders-controls-arrows">
              <i class="fa fa-caret-up" aria-hidden="true"></i>
              <i class="fa fa-caret-down" aria-hidden="true"></i>
            </div>
          </div>
        <!-- </div> -->
        <!-- <div class="orders-total-trash"> -->
          <div>Total: €<%= order_item.recipe.price * order_item.quantity %>.00</div>
          <i class="fa fa-trash" aria-hidden="true"></i>
        <!-- </div> -->
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <button class="btn btn-warning orders-checkout-button">Pay and Checkout</button>
    </div>
  </div>
</div>
